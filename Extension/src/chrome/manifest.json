{
    "manifest_version": 2,
    "name": "BingeBox - Watch movies with Voice chat",
    "description": "Watch Prime Video and Netflix remotely with friends using built in chat and group voice call.",
    "version": "0.0.0.1",
    "icons": {
      "16": "img/16.png",
      "48": "img/48.png",
      "128": "img/128.png"
    },
    "content_scripts": [
        {
          "matches": ["*://*.primevideo.com/*"],
          "js": ["js/content.js"]
        },
        {
          "matches": ["*://*.netflix.com/*"],
          "js": ["js/contentNetflix.js"]
        },
        {
          "matches": ["*://*.hotstar.com/*"],
          "js": ["js/contentHotstar.js"]
        }
    ],
    // "background": {
    //   "persistent": false,
    //   "scripts": ["js/background.js"]
    // },
    "background": {
      "persistent": false,
      "page": "chrome/background.html"
    },
    "browser_action": {
      "default_icon": {                    
        "16": "img/16.png"
      },
      "default_popup": "chrome/credentials.html",
      "default_title": "BingeBox"      
    },
    "permissions" : ["notifications", "storage"],
    "web_accessible_resources": [
      "img/PoweredBy_200px-Black_HorizText.png",
      "img/popkaun-bg.png",
      "img/minimal.png",
      "img/minimal-desaturated.svg",
      "firebase-messaging-sw.js"
    ],
    "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'"
  }
